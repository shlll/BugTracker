@model BugTracker.Models.UserRoleViewModel
@{
    ViewBag.Title = "ChangeRole";
}
<h2 style="color:red;text-align:center;font-style:oblique">ChangeRole</h2>
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:greenyellow;text-align:center;font-style:oblique">
                    ApplicationUser
                    <small style="color:greenyellow;text-align:center;font-style:oblique">Change Roles</small>
                </h1>
                @*<ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-file"></i> Blank Page
                        </li>
                    </ol>*@
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p style="color:blue;text-align:center;font-style:oblique">
                    **User: @Model.Name**
                </p>
                <div class="container" style="display:block;">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(p => p.Id)
                        @Html.ListBoxFor(p => p.SelectedRoles, Model.Roles)
                        <button type="submit" style="background-color:blue;color:yellow">Please Submit!</button>
                    }
                </div>
            </div>
        </div>
        <style>
            body {
                background-color: yellowgreen;
            }
        </style>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
