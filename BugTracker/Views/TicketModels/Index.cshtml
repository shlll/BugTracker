@model IEnumerable<BugTracker.Models.TicketModel>
@{
    ViewBag.Title = "Index";
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ticketTable').DataTable();
        });
    </script>
}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Tickets
                    <small>Index</small>
                </h1>
                @*<ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-file"></i> Blank Page
                        </li>
                    </ol>*@
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2>Index</h2>
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table id="ticketTable" class="table">
                    <thead>
                        <tr>
                            <th>
                                @*@Html.DisplayNameFor(model => model.Project.Name)*@
                                ProjectId
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Updated)
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.TicketPriority.Name)*@
                                TicketPriorityId
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.TicketStatus.Name)*@
                                TicketStatusId
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.TicketType.Name)*@
                                TicketTypeId
                            </th>
                            @*<th>
                                    @Html.DisplayNameFor(model => model.CreatingId)
                                </th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                         {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Project.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayDate(item.Created)
                                </td>
                                <td>
                                    @Html.DisplayDate(item.Updated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TicketType.Name)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.CreatingId)
                                    </td>*@
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                    @Html.ActionLink("AssignedTickets", "AssignedTickets", new { id = item.Id })

                                </td>
                            </tr>
                         }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
<style>
    body {
        background-color: white;
    }
</style>

