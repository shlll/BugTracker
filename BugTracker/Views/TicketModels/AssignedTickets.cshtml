@model BugTracker.Models.AssignedOfTheTicketsModel
@{
    ViewBag.Title = "AssignedTickets";
}

<h2>AssignedTickets</h2>

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Blank Page
                    <small>Subheading</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-file"></i> Blank Page
                    </li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(p => p.Id)
                    @Html.ListBoxFor(p => p.SelectedTicket, Model.TicketList)
                    <button type="submit" style="background-color:blue;color:yellow">Please Change!</button>
                }
            </div>
        </div>
        <!-- /.row -->
    </div>
    <style>
        body {
            background-color: white;
        }
    </style>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->