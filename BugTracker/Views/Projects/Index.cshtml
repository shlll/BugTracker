@model IEnumerable<BugTracker.Models.Classes.Project>
@{
    ViewBag.Title = "Index";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:greenyellow;text-align:center;font-style:oblique">
                    Project
                    <small style="color:greenyellow;text-align:center;font-style:oblique">Change Project</small>
                </h1>
                @*<ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-file"></i> Blank Page
                        </li>
                    </ol>*@
            </div>
        </div>
         <div class="row">
            <div class="col-lg-12">
                <h2 style="color:red;text-align:center;font-style:oblique">**Index**</h2>
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                   @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Assign Users", "AssignUsers", new { id = item.Id }) |
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                 </table>
             </div>
         </div>
        <!-- /.row -->
    </div>
    <style>
        body {
            background-color: lawngreen;
        }
    </style>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->




